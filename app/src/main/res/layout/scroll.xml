<?xml version="1.0" encoding="utf-8"?>
<sunning.democollection.learn._0306.view.ScrollerDemoView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <sunning.democollection.learn._0306.view.OnEventButton
        android:id="@+id/scroll_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X" />

    <Button
        android:id="@+id/scroll_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y" />

    <sunning.democollection.learn._0306.view.ScrollerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/holo_red_light"
            android:text="Test Demo" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_blue_bright"
            android:text="age" />

    </sunning.democollection.learn._0306.view.ScrollerView>

</sunning.democollection.learn._0306.view.ScrollerDemoView>